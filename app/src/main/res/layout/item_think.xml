<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:gravity="center_vertical"
	android:orientation="horizontal">

	<de.hdodenhof.circleimageview.CircleImageView
		android:layout_gravity="top"
		android:layout_marginTop="5dp"
		android:id="@+id/item_think_img"
		android:layout_width="35dp"
		android:layout_height="35dp"/>

	<LinearLayout
		android:paddingTop="10dp"
		android:paddingBottom="10dp"
		android:layout_marginLeft="15dp"
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<TextView
			android:id="@+id/item_think_name"
			android:textSize="14sp"
			android:textColor="#9e9e9e"
			android:text="唐家二小"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>
		<TextView
			android:id="@+id/item_think_content"
			android:textColor="#757575"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="40dp">

			<TextView
				android:id="@+id/item_think_time"
				android:textSize="14sp"
				android:textColor="#9e9e9e"
				android:layout_alignParentBottom="true"
				android:layout_marginBottom="3dp"
				android:text="3天前"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>

			<TextView
				android:layout_gravity="bottom|right"
				android:id="@+id/item_think_zan"
				android:layout_alignParentRight="true"
				android:text="3155"
				android:layout_width="wrap_content"
				android:layout_alignParentBottom="true"
				android:layout_marginBottom="3dp"
				android:layout_marginRight="5dp"
				android:layout_height="wrap_content"/>
			<ImageView
				android:layout_gravity="bottom|end"
				android:src="@drawable/za"
				android:layout_marginRight="5dp"
				android:layout_alignParentBottom="true"
				android:layout_marginBottom="3dp"
				android:layout_toLeftOf="@id/item_think_zan"
				android:layout_width="20dp"
				android:layout_height="20dp"/>

		</RelativeLayout>
	</LinearLayout>
</LinearLayout>