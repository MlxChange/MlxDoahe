<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">


	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="70dp"
		android:orientation="horizontal"
		android:padding="5dp">

		<de.hdodenhof.circleimageview.CircleImageView
			android:id="@+id/newfriend_circle"
			android:layout_width="50dp"
			android:layout_height="50dp"
			android:layout_gravity="center_vertical"
			android:layout_marginLeft="5dp"
			android:src="@drawable/b"
			/>

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="72dp"
			android:layout_gravity="center_vertical"
			android:layout_marginLeft="10dp">

			<TextView
				android:id="@+id/newfriend_name"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginBottom="5dp"
				android:layout_marginTop="10dp"
				android:maxLines="1"
				android:text="小明"
				android:textColor="#616161"
				android:textSize="18sp"/>

			<TextView
				android:id="@+id/newfriend_message"
				android:layout_width="wrap_content"
				android:layout_height="120dp"
				android:layout_below="@+id/newfriend_name"
				android:layout_centerVertical="true"
				android:maxLines="1"
				android:text="你好，可以认识一下吗"
				android:textColor="#616161"
				android:textSize="14sp"/>

			<Button
				android:id="@+id/newfriend_jujue"
				android:layout_width="60dp"
				android:layout_height="30dp"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
				android:background="@color/colorPrimary"
				android:text="拒绝"
				android:textColor="#fff"
				android:textSize="14sp"/>

			<Button
				android:id="@+id/newfriend_agree"
				android:layout_width="60dp"
				android:layout_height="30dp"
				android:layout_centerVertical="true"
				android:layout_marginRight="5dp"
				android:layout_toLeftOf="@+id/newfriend_jujue"
				android:background="@color/colorPrimary"
				android:text="同意"
				android:textColor="#fff"
				android:textSize="14sp"/>

		</RelativeLayout>

	</LinearLayout>

</LinearLayout>