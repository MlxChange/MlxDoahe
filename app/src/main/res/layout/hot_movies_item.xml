<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="120dp"
	android:gravity="center_vertical"
	android:orientation="horizontal">

	
	<ImageView
		android:id="@+id/hot_movies_item_img"
		android:layout_width="70dp"
		android:src="@mipmap/ic_launcher"
		android:layout_height="100dp"/>

	<LinearLayout
		android:layout_marginLeft="12dp"
		android:gravity="center_vertical"
		android:orientation="vertical"
		android:layout_width="wrap_content"
		android:layout_height="100dp">

		<TextView
			android:text="功夫瑜伽"
			android:textSize="18dp"
			android:textColor="#616161"
			android:layout_marginBottom="7dp"
			android:id="@+id/hot_movies_item_MoviesName"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>
		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content">

			<TextView
				android:text="观众："
				android:textColor="#bdbdbd"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>
			<TextView
				android:text="8.5"
				android:textColor="#ff7043"
				android:id="@+id/hot_movies_item_star"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>

		</LinearLayout>
		<TextView
			android:layout_marginTop="7dp"
			android:text="科学家寻宝，中印来回跑"
			android:id="@+id/hot_movies_item_dec"
			android:textColor="#9e9e9e"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>
		<TextView
			android:text="今天16家影院放映64场"
			android:layout_marginTop="5dp"
			android:textColor="#9e9e9e"
			android:id="@+id/hot_movies_item_number"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>


	</LinearLayout>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="100dp">

		<ImageView
			android:layout_centerVertical="true"
			android:layout_alignParentRight="true"
			android:layout_marginRight="20dp"
			android:id="@+id/hot_movies_item_like"
			android:src="@mipmap/like"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>

	</RelativeLayout>

</LinearLayout>