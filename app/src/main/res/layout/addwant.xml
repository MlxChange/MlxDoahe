<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	>


	<ImageView
		android:id="@+id/addnewwant_bg"
		android:background="#30000000"
		android:scaleType="centerCrop"
		android:layout_width="match_parent"
		android:layout_height="230dp"/>
	<RelativeLayout
		android:layout_width="96dp"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="70dp"
		android:layout_height="96dp">
		<de.hdodenhof.circleimageview.CircleImageView
			android:id="@+id/addnewwant_cirlImage"
			android:layout_width="match_parent"
			android:layout_centerInParent="true"
			android:onClick="setting_circle"
			android:src="#70ffffff"
			android:layout_height="match_parent"
			/>

	</RelativeLayout>

	<LinearLayout
		android:id="@+id/setting_user_layout"
		android:layout_width="330dp"
		android:layout_height="wrap_content"
		android:layout_below="@+id/addnewwant_bg"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="25dp"
		android:orientation="vertical">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingStart="4dp"
			android:text="类型"
			android:textColor="#9e9e9e"
			android:textSize="12sp"/>


		<com.jaredrummler.materialspinner.MaterialSpinner
			android:id="@+id/addnewwant_type"
			android:layout_width="match_parent"
			android:layout_height="50dp"/>
	</LinearLayout>
	<LinearLayout
		android:id="@+id/setting_age_layout"
		android:layout_width="330dp"
		android:layout_height="wrap_content"
		android:layout_below="@+id/setting_user_layout"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="20dp"
		android:orientation="vertical">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingStart="4dp"
			android:text="详情"
			android:textColor="#9e9e9e"
			android:textSize="12sp"/>


		<com.jaredrummler.materialspinner.MaterialSpinner
			android:id="@+id/addnewwant_content"
			android:layout_width="match_parent"
			android:layout_height="50dp"/>

	</LinearLayout>
	<LinearLayout
		android:id="@+id/setting_phone_layout"
		android:layout_width="330dp"
		android:layout_height="wrap_content"
		android:layout_below="@+id/setting_age_layout"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="20dp"
		android:orientation="vertical">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingStart="4dp"
			android:text="邀请"
			android:textColor="#9e9e9e"
			android:textSize="12sp"/>


		<com.jaredrummler.materialspinner.MaterialSpinner
			android:id="@+id/addnewwant_type2"
			android:layout_width="match_parent"
			android:layout_height="50dp"/>

	</LinearLayout>
	<LinearLayout
		android:id="@+id/setting_desc_layout"
		android:layout_width="330dp"
		android:layout_height="wrap_content"
		android:layout_below="@+id/setting_phone_layout"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="20dp"
		android:orientation="vertical">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingStart="4dp"
			android:text="邀请语"
			android:textColor="#9e9e9e"
			android:textSize="12sp"/>


		<EditText
			android:id="@+id/addnewwant_desc"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textColor="#212121"
			android:maxLines="2"
			android:textSize="15dp"
			/>

	</LinearLayout>

	<ImageView
		android:onClick="back"
		android:layout_marginTop="23dp"
		android:layout_marginLeft="9dp"
		android:src="@mipmap/back"
		android:layout_width="35dp"
		android:layout_height="23dp"/>
	<ImageView
		android:onClick="ok"
		android:layout_marginTop="23dp"
		android:layout_alignParentRight="true"
		android:layout_marginRight="9dp"
		android:src="@mipmap/ok"
		android:layout_width="35dp"
		android:id="@+id/addnewwant_ok"
		android:layout_height="23dp"/>

</RelativeLayout>